
<div class = 'container'>
<h1>My Sales</h1>
<table class = 'table table-striped table-bordered'>
  <thead>
    <tr>
      <th>Product Name</th>
      <th> Price</th>
      <th>Buyer Name/Email</th>
      <th> Order Date </th>
      <th>Buyer Address</th>

    </tr>
  </thead>
  <%#TODO: Need to refactor styles on index page %>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td style='vertical-align: middle;'><%= order.listing.name %></td>
        <td style='vertical-align: middle;'><%= number_to_currency order.listing.price %></td>
       
        <td style='vertical-align: middle;'><%= order.buyer.name+ '/' + order.buyer.email %></td>
         <td style='vertical-align: middle;'><%= order.created_at.strftime('%c') %></td>
        <td style='vertical-align: middle;'><%= "#{order.address}," + "#{order.city}," + "#{order.state}\n" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%#= link_to 'New Listing', new_listing_path,class: 'btn btn-link' %>
</div>
<br>
