
<div class = 'container'>
<h1>My Purchases</h1>
<table class = 'table table-striped table-bordered'>
  <thead>
    <tr>
      <th>Product Name</th>
      <th> Price</th>
      <th>Seller Name/Email</th>
      <th> Order Date </th>
    </tr>
  </thead>
  <%#TODO: Need to refactor styles on index page %>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td style='vertical-align: middle;'><%= order.listing.name %></td>
        <td style='vertical-align: middle;'><%= number_to_currency order.listing.price %></td>
       
        <td style='vertical-align: middle;'><%= order.seller.name+ '/' + order.seller.email %></td>
         <td style='vertical-align: middle;'><%= order.created_at.strftime('%c') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%#= link_to 'New Listing', new_listing_path,class: 'btn btn-link' %>
</div>
<br>
