
<div class = 'container'>
	<div class = 'row' >
		<div class = 'col-md-6'>
			<div class ='thumbnail'>
			<%= image_tag(@listing.image.url, class:'img-responsive') %>
		</div>
		</div>
		<div class = 'col-md-6'>
			<h2><%= @listing.name %></h2>
			<p class ='lead'>
				<%= number_to_currency @listing.price %>
			</p>
			<br>
			<br>
			<p> <strong>Description</strong> </p>
			<p>
				<%= @listing.description %>
			</p>
			<br>
			<br>
			<%= button_to('Purchase Item',new_listing_order_path(@listing), class: 'btn btn-success', method:'get') unless current_owner? @listing %>
		</div>
	</div>
	<p>
		<%= link_to('Edit', edit_listing_path(@listing),class: 'btn btn-link') if current_owner?(@listing) %> |<%= link_to 'Back',:back,class: 'btn btn-link' %>
	</p>
</div>					
