@import "bootstrap";

body{
	background-color: #F5F5F1;
	color: #333;
	font-family: Arial, Helvetica, sans-serif;
}

.navbar-default{
	background-color:#EFEfEB;
}

.navbar-default .navbar-brand{
	font-family: guardian-egypt,georgia,serif;
	font-weight: 400;
	color: #d5641c;
	font-size:30px;
}

.navbar-default .navbar-nav > li >a{
	font-family: Arial,Helvetica,sans-serif;
	font-size: 14px;
	font-weight: bold;
	color: #0192B5;
}

.col-md-3:nth-child(4n+1){
	clear:both;
}

.devise_shared{
	margin: none;
	padding: none;
	
}

.devise_error h2{
	font-size:20px;
}

.devise_error{
  padding-top: 10px;
}

.devise_error li {
	list-style-type: none;
	 color:#e74c3c;
	 font-weight: bold;
	 font-size:15px;


}

 #custom-header{
	background-image: url(<%= asset_path('skulls.png')%>);
	background-repeat: repeat;
    background-color: #fff;
}


